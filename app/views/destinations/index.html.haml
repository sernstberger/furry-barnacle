.container-fluid
  .row
    .col-xl-10.offset-xl-1
      .row
        - if @destinations.present?
          - @destinations.each do |destination|
            .col-sm-6.col-lg-4
              .card.mt-3
                = link_to destination do
                  = image_tag Photo.first.image.large, class: 'img-fluid'
                .card-block
                  %h3= link_to destination.name, destination
                  %h5 #{destination.city + ',' if destination.city.present?} #{destination.state}
                  .badge.badge-default National Park
                  stars
                  stars number

                  - if destination.excerpt.present?
                    %p.font-serif= destination.excerpt
                  - else
                    %p.font-serif= destination.about.truncate(100)

                  - if destination.attractions.present?
                    %h6 Top places
                    %p
                      - destination.attractions.each do |attraction|
                        #{attraction.name},

                  = link_to 'Read more', destination, class: 'btn btn-secondary'
        - else
          Add some destinations!

  %br
  %br
  %br
  %br
  = link_to 'New Destination', new_destination_path
