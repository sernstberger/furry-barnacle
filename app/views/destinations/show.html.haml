.jumbotron.jumbotron-fluid.jumbotron-tall.cover.d-flex.align-items-end.with-overlay.m-0{style: "background-image: url(#{cl_image_path @destination.photos.first.image.jumbo})"}
  .container
    .row
      .col.d-lg-flex.justify-content-lg-between.align-items-center
        %div
          %h1.display-1.jumbotron-text= @destination.name
          %h2.jumbotron-text
            -# = @destination.city unless @destination.name === @destination.city
            %em #{@destination.city}, #{@destination.state}

        - if @destination.photos.count > 1
          %button.btn.btn-secondary.jumbotron-btn{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
            View images

#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
      #carouselExampleSlidesOnly.carousel.slide{data: {ride: 'carousel', interval: 'false'}}
        %ol.carousel-indicators
          - @destination.photos.each_with_index do |dp, index|
            %li{"data-slide-to" => index, "data-target" => "#carouselExampleSlidesOnly"}

        .carousel-inner{:role => "listbox"}
          - @destination.photos.each do |dp|
            .carousel-item.align-items-center
              = cl_image_tag dp.image.jumbo, class: 'img-fluid'
              .carousel-caption.d-none.d-md-block
                %h3= dp.name
                %p= dp.description

        %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleSlidesOnly", :role => "button"}
          %span.carousel-control-prev-icon{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleSlidesOnly", :role => "button"}
          %span.carousel-control-next-icon{"aria-hidden" => "true"}
          %span.sr-only Next







