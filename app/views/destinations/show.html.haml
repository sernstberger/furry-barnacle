-# = link_to 'Back', destinations_path

.blah
  = image_tag @destination.photos.first.image.jumbo, class: 'img-fluid'

.container
  .row
    .col-sm-8
      %h1= @destination.name
      .font-serif.longform
        = @destination.about.html_safe

    .col-sm-4
      .card
        %h5.card-header Things to do
        .list-group.list-group-flush
          - @attractions.each do |attraction|
            = link_to attraction_path(attraction), class: 'list-group-item' do
              = attraction.name
        .card-footer
          = link_to 'show all', '#'

  = link_to 'Edit', edit_destination_path(@destination)
