<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :status %>
    <%= f.input :featured %>
    <%= f.input :slug %>
    <%= f.input :excerpt %>
    <%= f.input :publish_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
