- if @posts.present?
  = render partial: 'components/search', locals: {search_url: admin_posts_path, search_params: :title_cont, search_placeholder: 'Search posts...'}
  %table.table.table-striped
    %thead.thead-default
      %tr
        %th
        %th Name
        %th Published date
        %th Featured
        %th Status
        %th Actions
    %tbody
      - @posts.each do |post|
        %tr
          %td= cl_image_tag 'http://lorempixel.com/60/40', class: 'img-fluid'
          %td= link_to post.title, edit_admin_post_path(post.id)
          %td= formatted_date post.publish_date
          %td
          %td
          %td
            show
            edit
            delete

  = paginate @posts
- else
  Add some blog posts!
