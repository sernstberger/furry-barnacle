= simple_form_for [:admin, @post] do |f|
  = f.error_notification
  .row
    .col-md-9
      = f.input :title
      website url:
      = f.input :slug
      = link_to 'go to page', '#', class: 'btn btn-secondary'

      = f.trix_editor :body, class: 'form-control'

      %hr

      = f.input :excerpt


    .col-md-3
      = f.input :status
      = f.input :featured
      = f.input :publish_date

      = f.button :submit, class: 'btn-primary'
