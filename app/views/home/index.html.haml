              -#       .font-serif
              -#         = post.excerpt
              -#     - else
              -#       .font-serif
              -#         = post.body.truncate(100)
              -#     = link_to 'Read more', post, class: 'btn btn-secondary'

      .col-md-6
        %h2 Featured Posts
        .row
          - @posts.each do |post|
            = render partial: 'components/post_card', locals: {post: post}



    .row
