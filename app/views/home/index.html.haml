.jumbotron.jumbotron-fluid.bg-inverse
  .container
    %h1
      %span.text-primary Furry Barnacle
      %span.text-white helps you find the places to visit as you plan your trip.

    = simple_form_for :thing do |f|
      = f.input :boo, placeholder: 'Where are you going?', label: false, input_html: {class: 'form-control-lg mt-5'}
      -# = f.submit 'Search', class: 'btn btn-primary'




.container-fluid
  - if @destinations.present?
    %h2 Top Destinations
    .row
      - @destinations.each do |destination|
        = render partial: 'components/destination_card', locals: {destination: destination}
    .row.mt-3.text-center
      .col
        = link_to 'See all destinations', destinations_path, class: 'btn btn-primary'

  %hr

  - if @posts.present?
    .row
      .col-md-6
        %h2 Recent Posts
        .list-group
          - @posts.each do |post|
            -# = render partial: 'components/post_card', locals: {post: post}

            .list-group-item
              = image_tag 'http://lorempixel.com/100/100', class: 'img-fluid'
              %h3= link_to post.title, post
              - if post.excerpt.present?
                .font-serif
                  = post.excerpt
              - else
                .font-serif
                  = post.body.truncate(100)

              -# .row
